<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/splashScreen"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/drawable" />

    <TextView
        android:id="@+id/namadesawisata"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="-50dp"
        android:layout_below="@id/splashScreen"
        android:fontFamily="@font/highland_gothic_light"
        android:text="@string/desa_wisata_tempellmahbang"
        android:textAlignment="center"
        android:textColor="@color/green_700"
        android:textSize="16dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_below="@id/namadesawisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>